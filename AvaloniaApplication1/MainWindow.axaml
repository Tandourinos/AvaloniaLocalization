<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avaloniaApplication1="clr-namespace:AvaloniaApplication1"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication1.MainWindow"
        x:DataType="avaloniaApplication1:MainWindowViewModel"
        Title="AvaloniaApplication1">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="{Binding Title}"/>
        <Button Content="Switch" Command="{Binding SwitchCommand}" HorizontalAlignment="Center"/>
        <TextBlock Text="{Binding CurrentCulture}"/>
    </StackPanel>
</Window>
